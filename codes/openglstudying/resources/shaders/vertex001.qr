#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aColor;

out vec3 outColor;
uniform vec3 transformation;

void main()
{
    gl_Position = vec4(aPos, 1.0);//Swizzling
    gl_Position = vec4(-1.0 * aPos + transformation, 1.0);//upside down
    outColor = aColor;
}